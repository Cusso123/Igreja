@model Igreja.WebApp.Models.MembroCadastroViewModel
@Html.EditorForModel(true)

<!DOCTYPE html>
<html lang="en">
<head>
	<!-- Meta Options -->
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<!-- Title -->
	<title>Perfil</title>
	<!-- Bootstrap -->
	<link rel="stylesheet" type="text/css" href="~/css/bootstrap.min.css">
	<!-- Animate on scroll -->
	<link rel="stylesheet" type="text/css" href="~/css/aos.css">
	<!-- Stylesheet -->
	<link rel="stylesheet" type="text/css" href="~/css/style.css">
	<!-- Colors -->
	<link rel="stylesheet" type="text/css" href="~/css/color.css">
	<!-- Responsive -->
	<link rel="stylesheet" type="text/css" href="~/css/responsive.css">
</head>
<body>
	<!-- Banner Start -->
	<section class="banner position-relative">
		<div class="parallax" style="background-image: url(https://iili.io/JTMj6TQ.jpg);"></div>
		<div class="banner-data text-center">
			<h2 class="text-white font-bold">Perfil</h2>
			<img src="~/images/SimboloPresbiteriana50x65.png" alt="Banner Logo">
		</div>
	</section>
	<!-- Banner End -->
    <!-- Perfil Start -->
	<section>
		<form  method="post" id="login_form">
			<!-- FORM HEADER -->
			<div id="form_header">
				<h1>Login</h1>
				<i id="mode_icon" class="fa-solid fa-moon"></i>
			</div>
			<!-- INPUTS -->
			<div id="inputs">
				<!-- NAME -->
				<div class="input-box">
					<!-- EMAIL -->
					@Html.HiddenFor(x => x.Owner)
					@Html.HiddenFor(x => x.Id)
					<div class="input-box">
						<label for="email">
							E-mail
							<div class="input-field">
								<i class="fa-solid fa-envelope"></i>
								<input @Model.Email type="email" asp-for="Email" class="form-control" placeholder="Digite seu email" aria-label="Digite seu email" aria-describedby="basic-addon1" id="email" name="Email">
								@Html.ValidationMessageFor(x => x.Email)
							</div>
						</label>
					</div>
					<div class="input-box">
						<label for="Nome">
							Nome
							<div class="input-field">
								<i class="fa-solid fa-envelope"></i>
								<input valor="@Model.Nome" type="text" asp-for="Nome" class="form-control" placeholder="Digite seu Nome" aria-label="Digite seu Nome" aria-describedby="basic-addon1" id="nome" name="Nome">
							</div>
						</label>
					</div>
					<div class="input-box">
						<label for="Login">
							Login
							<div class="input-field">
								<i class="fa-solid fa-envelope"></i>
								<input valor="@Model.Login" type="text" asp-for="Login" class="form-control" placeholder="Digite seu Login" aria-label="Digite seu login" aria-describedby="basic-addon1" id="login" name="Login">
							</div>
						</label>
					</div>
					<!-- PASSWORD -->
					<div class="input-box">
						<label for="senha">
							Senha
							<div class="input-field">
								<i class="fa-solid fa-key"></i>
								<input valor="@Model.Senha" type="password" asp-for="Senha" class="form-control" placeholder="Digite a senha" aria-label="Digite a senha" aria-describedby="basic-addon1" id="senha" name="Senha">
							</div>
						</label>
						<!-- FORGOT PASSWORD -->
					</div>
				</div>
			</div>
			<!-- Cadastrar BUTTON -->
			<button type="submit" id="login_button">
				Salvar
			</button>
		</form>
	</section>
	<!-- Perfil End -->
	<!-- Subscribe Start -->
	<section class="subscribe">
		<div class="container">
			<div class="row align-items-center">
				<div class="col-lg-5 col-md-12 col-sm-12">
					<h3 class="text-white">Vamos manter contato!</h3>
					<p class="text-white">Inscreva-se para ficar por dentro das últimas notícias e atualizações interessantes.</p>
				</div>
				<div class="col-lg-7 col-md-12 col-sm-12">
					<form>
						<input type="text" name="Text" placeholder="Insira o seu endereço de email...">
						<button>Se inscrever</button>
					</form>
				</div>
			</div>
		</div>
	</section>
	<!-- Subscribe End -->
	<!-- Footer One Start -->
	<footer class="gap footer-one no-bottom green-overlay">
		<div class="parallax" style="background-image: url(https://scontent.faax1-1.fna.fbcdn.net/v/t1.6435-9/83929517_102524924645681_4953547127218241536_n.jpg?_nc_cat=101&ccb=1-7&_nc_sid=7a1959&_nc_eui2=AeGKRwB4t_U1oCXPpVDTtlpXO8_rgRssBj87z-uBGywGP-CGiUmL0CFVu-7QaMYF-zU&_nc_ohc=2_5vRhHggzoAX9Gp-Ca&_nc_oc=AQn8_lf4VrSN5JJpXnTbXG9ezUZUMqRch3pF0Xf-2b2KcgwG2T_o-SLYyHGgIEX7G6s&_nc_ht=scontent.faax1-1.fna&oh=00_AfAztEtUwLoTzxWma0PfQgRW0HbON-mNaUO4aWtsG-21cg&oe=65950E33);"></div>
		<div class="container">
			<div class="copy-right">
				<div class="social">
					<ul class="social-medias">
						<li><a href="https://www.facebook.com/ipbaraxa"><img src="~/images/facebook.svg" alt="facebook"></a></li>
						<li><a href="https://www.instagram.com/ipbaraxa"><img src="~/images/instagram.svg" alt="instagram"></a></li>
					</ul>
				</div>
				<div class="footer-rights">
					<p class="text-white">© Copyright <span>2023 - Presbiteriana.</span> Todos os direitos reservados.</p>
				</div>
			</div>
		</div>
	</footer>
	<!-- Footer One End -->
