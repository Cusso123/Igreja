	<!-- Jquery -->
	<script src="~/js/jquery.min.js"></script>
	<!-- Bootstrap Js -->
	<script src="~/js/bootstrap.min.js"></script>
	<!-- Animate on scroll Js -->
	<script src="~/js/aos.js"></script>
	<!-- Custom Js -->
	<script src="~/js/custom.js"></script>
	<script>document.querySelectorAll('input.form-control').forEach(e => { e.value = e.getAttribute('valor'); e.defaultValue = e.getAttribute('valor'); console.log(e) })</script>

</body>
</html>
