<script>
	function consultarCapitulo() {
		let livro = $('#livro').val();
		let capitulo = $('#capitulo').val();

		console.log(`https://www.abibliadigital.com.br/api/verses/nvi/${livro}/${capitulo}`);

		$.ajax({
			url: `https://www.abibliadigital.com.br/api/verses/nvi/${livro}/${capitulo}`,
			type: 'GET',
			contentType: 'application/json',
			success: function (data) {
				console.log(data);

				$('#spAutor').html(data.book.author);
				$('#spNome').html(data.book.name);
				$('#spGrupo').html(data.book.group);
				$('#spCapitulo').html(data.chapter.verses);
				let versiculosHTML = data.verses.map(v => `<strong>${v.number}</strong>: ${v.text}`).join('<br>');
				$('#spTextos').html(versiculosHTML);
			},
			error: function (error) {
			console.log(error);
			alert('Erro ao consultar o capítulo da Bíblia.');
			}
		});
	}
</script>
